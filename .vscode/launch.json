    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'rslox'",
            "cargo": {
                "args": [
                    "test",
                    "compiler::tests",
                    "--no-run",
                    "--lib",
                    "--package=rslox"
                ],
                "filter": {
                    "name": "rslox",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rslox'",
            "cargo": {
                "args": [
                    "run",
                    "+nightly",
                    "miri",
                    "--bin=rslox",
                    "--package=rslox"
                ],
                "filter": {
                    "name": "rslox",
                    "kind": "bin"
                }
            },
            "args": ["--file=lox/functions.lox"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
